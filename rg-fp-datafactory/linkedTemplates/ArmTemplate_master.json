{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "rg-fp-datafactory"
		},
		"ls_adls_ingest_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://rgfpadatalake.dfs.core.windows.net"
		},
		"ls_fp_github_properties_typeProperties_username": {
			"type": "string",
			"defaultValue": "jhoandominguezu@gmail.com"
		},
		"ls_keyvalue_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": "https://fpKeyVault.vault.azure.net/"
		},
		"ls_onpremise_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "C:\\Data\\"
		},
		"ls_onpremise_properties_typeProperties_userId": {
			"type": "string",
			"defaultValue": "jhoancamilo-22@hotmail.com"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "rg-fp-datafactory_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"ls_keyvalue_properties_typeProperties_baseUrl": {
						"value": "[parameters('ls_keyvalue_properties_typeProperties_baseUrl')]"
					},
					"ls_adls_ingest_properties_typeProperties_url": {
						"value": "[parameters('ls_adls_ingest_properties_typeProperties_url')]"
					},
					"ls_fp_github_properties_typeProperties_username": {
						"value": "[parameters('ls_fp_github_properties_typeProperties_username')]"
					},
					"ls_onpremise_properties_typeProperties_host": {
						"value": "[parameters('ls_onpremise_properties_typeProperties_host')]"
					},
					"ls_onpremise_properties_typeProperties_userId": {
						"value": "[parameters('ls_onpremise_properties_typeProperties_userId')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}